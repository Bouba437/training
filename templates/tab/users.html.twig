{% extends "template.html.twig" %}

{% block title %}
    users
{% endblock %}

{% block pageTitle %}
    Liste des utilisateurs
{% endblock %}

{% block body %}

   {{ include('fragments/date-jour.html.twig') }}

   <div class="alert alert-warning">
        <a href="{{ path('app_tab', {nb : 7}) }}">Statistiques de tableau</a>
   </div>
    
    <table class="table">
        <tr class="table-active">
            <td>Firtname</td>
            <td>Name</td>
            <td>Age</td>
            {# <td>Message</td> #}
        </tr>
        {% for user in users %}
           <tr class="table-{% if loop.index is odd %}danger{% else %}warning{% endif %}">
                <td>{{ user.firstname }}</td>
                <td>{{ user.name }}</td>
                <td>{{ user.age }}</td>
                {# <td>
                    {{ render(controller('App\\Controller\\FirstController::sayHello', {firstname: user.firstname, name: user.name})) }}
                </td> #}
           </tr> 
        {% endfor %}
    </table>
{% endblock %}
